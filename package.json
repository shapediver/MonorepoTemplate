{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "npm run check-npm-version && lerna bootstrap --hoist",
    "clean": "lerna clean",
    "reset": "npm run clean ; rm -r ./node_modules ; rm -r ./.venv",
    "check-npm-version": "bash ./scripts/check-npm-version.sh",
    "create-lib": "npm run check-npm-version && bash ./scripts/create-lib.sh",
    "create-package": "bash ./scripts/create-package.sh",
    "add-dependency": "bash ./scripts/add-dependency.sh",
    "add-devDependency": "bash ./scripts/add-devDependency.sh",
    "publish": "lerna publish --force-publish --no-push --registry https://npm.pkg.github.com/",
    "init": "bash ./scripts/init.sh",
    "test": "npm run check-npm-version && lerna run test",
    "build": "npm run check-npm-version && lerna run build",
    "build-dep": "lerna run build-dep"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^16.18.11",
    "jest": "^27.5.1",
    "json": "^11.0.0",
    "lerna": "^6.3.0",
    "ts-jest": "^27.1.4",
    "ts-loader": "^8.4.0",
    "typescript": "~4.4.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1",
    "webpack-merge": "^5.8.0"
  }
}
